<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/maintopbuttons"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/add"
            android:text="ADD CITY"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            />
        <Button
            android:id="@+id/delete"
            android:text="DELETE CITY"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonaddconfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_weight="1"
        android:visibility="gone">

        <EditText
            android:id="@+id/input"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="               Input a city name" />

        <Button
            android:id="@+id/confirmAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM" />

    </LinearLayout>

    <ListView
        android:id="@+id/city_list"
        app:layout_constraintTop_toBottomOf="@+id/maintopbuttons"
        app:layout_constraintBottom_toTopOf="@id/buttonaddconfirmation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
    </ListView>





</androidx.constraintlayout.widget.ConstraintLayout>